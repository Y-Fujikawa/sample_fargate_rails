{
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "migrate",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "/sample/db/host"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "/sample/db/name"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/sample/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/sample/db/password"
        }
      ],
      "workingDirectory": "",
      "command": ["bundle", "exec", "rails", "db:migrate", "RAILS_ENV=production"]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "family": "migrate"
}
