{
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "/sample/db/host"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "/sample/db/name"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/sample/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/sample/db/password"
        }
      ],
      "dockerLabels": {
        "com.datadoghq.ad.instances": "[{\"host\": \"%%host%%\", \"port\": 80}]",
        "com.datadoghq.ad.check_names": "[\"web\"]",
        "com.datadoghq.ad.init_configs": "[{}]"
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/web",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }, {
      "name": "datadog-agent",
      "image": "datadog/agent:latest",
      "essential": true,
      "environment": [
        {
          "name": "DD_API_KEY",
          "value": "$YOUR_API_KEY"
        },
        {
          "name": "ECS_FARGATE",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "DD_API_KEY",
          "valueFrom": "/sample/datadog/api_key"
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "family": "web"
}
