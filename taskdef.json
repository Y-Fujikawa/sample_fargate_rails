{
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "secrets": [
        {
          "name": "DB_NAME",
          "valueFrom": "/sample/db/name"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/sample/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/sample/db/password"
        }
      ],
      "workingDirectory": "/usr/local/src/sample_fargate_rails",
      "command": ["bundle", "exec", "puma", "-C", "config/puma/production.rb", "-d"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-sample",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "awslogs-sample"
        }
      },
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "family": "web"
}
