{
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "secrets": [
        {
          "name": "DB_NAME",
          "valueFrom": "/sample/db/name"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/sample/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/sample/db/password"
        }
      ],
      "command": ["bundle exec puma -C config/puma/production.rb"]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "family": "web"
}
